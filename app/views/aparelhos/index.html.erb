<div class="index-section">
  <h1 id="index-title"></h1>

  <div class="aparelhos">
    <% @aparelhos.each do |aparelho| %>
      <div class="card-aparelhos">
        <div class="card-aparelhos-infos">
          <p><%= aparelho.operadora.capitalize %></p>
          <p><%= aparelho.numero %></p>
          <% if aparelho.status == true %>
            <p>Status: Ativo</p>
          <% else %>
            <p>Status: Inativo</p>
          <% end %>
          <%= link_to "detalhes", aparelho_path(aparelho) %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to  "Novo aparelho", new_aparelho_path, class: "btn btn-success" %>
</div>